<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#000027"
			android:orientation="vertical"
			android:layout_weight="9">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#000027"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/text_undo"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:src="@drawable/ic_undo_white"
					android:scaleType="centerInside"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/text_redo"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:src="@drawable/ic_redo_white"
					android:scaleType="centerInside"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/selectall"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:src="@drawable/ic_done_all_white"
					android:scaleType="centerInside"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="1" />
				<LinearLayout
					android:id="@+id/linearcolor"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="2dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="C"
						android:textSize="14sp"
						android:textColor="#000000" />
				</LinearLayout>
				<ImageView
					android:id="@+id/addfile"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:padding="8dp"
					android:src="@drawable/ic_add_white"
					android:scaleType="centerInside"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/more1"
					android:scaleType="centerInside" />
			</LinearLayout>
			<io.github.rosemoe.sora.widget.CodeEditor
				android:id="@+id/ninjacoder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1" />
			<HorizontalScrollView
				android:id="@+id/hscroll1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent">
				<org.ppsspp.ppsspp.SymbolInputView
					android:id="@+id/sysbar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#000027"
					android:orientation="horizontal" />
			</HorizontalScrollView>
			<LinearLayout
				android:id="@+id/searchbar"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:padding="8dp"
				android:orientation="vertical">
				<EditText
					android:id="@+id/serach"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:padding="8dp"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:hint="searching text......"
					android:textColorHint="#E0E0E0" />
				<EditText
					android:id="@+id/reaplsellall"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:padding="8dp"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:textColorHint="#607D8B" />
				<Button
					android:id="@+id/button1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:padding="8dp"
					android:text="جایگزینی همه"
					android:textSize="14sp"
					android:textColor="#000000" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="40dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/fileutilesave" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
